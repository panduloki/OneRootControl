<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:scrollbars="vertical"
    app:cardBackgroundColor="#79BADD"
    app:cardCornerRadius="32dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="257dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="164dp"
                    android:layout_height="match_parent"
                    android:text=" username: "
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@+id/username" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="name"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toTopOf="@+id/coconutNo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="171dp"
                    android:layout_height="match_parent"
                    android:text=" session Number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/SessionsNo"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="session no"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    app:layout_constraintTop_toBottomOf="@+id/session_type" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:text=" role"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/role"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="role"
                    android:textAlignment="center"
                    android:textSize="26sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:text=" coconut no"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/coconutNo"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="cn number"
                    android:textAlignment="center"
                    android:textSize="26sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:text=" location"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="location"
                    android:textAlignment="center"
                    android:textSize="26sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="157dp"
                    android:layout_height="match_parent"
                    android:text=" Ph No"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mobileNo"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="mobileNo"
                    android:textAlignment="center"
                    android:textSize="26sp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>